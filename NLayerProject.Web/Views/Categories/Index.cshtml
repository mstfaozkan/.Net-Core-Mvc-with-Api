@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<a class="btn btn-primary mb-2" asp-action="Create" asp-controller="Categories"><i class="fas fa-plus-circle"></i> Kategori Ekle</a>


<hr />
<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id"><i class="fas fa-pen"></i></a>
                    <a class="ml-3" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

